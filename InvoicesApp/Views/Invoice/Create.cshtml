                @Html.ValidationMessageFor(model => model.Recipient, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InvoiceItems, "Tax", htmlAttributes: new { @class = "control-label col-md-2" })
